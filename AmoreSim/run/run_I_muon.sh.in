#!/bin/bash -f

workdir="@AMORESIM_WORK_DIR@"

if [ "x$1" = "x" ]; then
  if [ "x$SGE_TASK_ID" = "x" ]; then
    echo "WRONG CONFIGURATION"
    exit
  else
    runid=`expr $SGE_TASK_ID - 1`
  fi
else
  runid=$1
fi

export CupDATA=$workdir"/CupSim/data"
export AmoreDATA=$workdir"/AmoreSim/data"

cd $workdir

# path to muon flux data
pathmf="@MUON_PATH@"
mfname="Y2L_A5_xdist10m_xsize10m_nevt100000_run"$runid".txt"

# number of events (will be setted automatically)
#set nevt = 800

# detector setup
setup="muon"

# run name
jobname="@AMORESIM_JOB_NAME@"

# output directory (must contain mac log root directory)
outdir="@SIMOUT_PATH@"

# ===================================================

exe=$workdir/AmoreSim/amoresim

mufilepath="$pathmf/$mfname"
evtwc=`wc -l $mufilepath | cut -d' ' -f1`
nevt=`expr $evtwc / 2`
nevt=10000

rout=$outdir"/root"
output=$rout"/amoreI_"$setup"-run"$runid

mac=$outdir"/mac/amoreI-"$setup"_"$runid"_"$nevt".mac"
log=$outdir"/log/amoreI-"$setup"_"$runid"_"$nevt".txt"

timeseed=`date +%s%N | cut -b10-17`

if [ -e $mac ]
then
  rm -f $mac
fi

/bin/sed -e s#MUPATH#$mufilepath#g -e s#OUTPUT#$output#g -e s#NEVENTS#$nevt#g -e s#SEED#$timeseed#g $workdir/AmoreSim/mac/I_muonbckg.mac > $mac

$exe $mac &> $log
#$exe $mac &> /dev/null

exit
